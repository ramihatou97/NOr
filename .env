# Enhanced KOO Platform Environment Variables
# Production-ready configuration for all intelligence modules

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application Version
APP_VERSION=1.0.0

# Secret Key for FastAPI (Generate a new one for production)
SECRET_KEY=koo-ultra-secure-secret-key-2024-change-for-production

# Debug Mode (false for production)
DEBUG=true

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*.use.devtunnels.ms

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://*.use.devtunnels.ms

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://koo_user:koo_secure_password_2024@postgres:5432/koo_platform

# Database Connection Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# PostgreSQL Individual Settings (alternative to DATABASE_URL)
POSTGRES_DB=koo_platform
POSTGRES_USER=koo_user
POSTGRES_PASSWORD=koo_secure_password_2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://:koo_redis_password_2024@redis:6379/0

# Redis Individual Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=koo_redis_password_2024
REDIS_DB=0

# Cache TTL Settings (seconds)
CACHE_TTL_DEFAULT=300
CACHE_TTL_RESEARCH_RESULTS=86400
CACHE_TTL_QUALITY_ASSESSMENTS=3600
CACHE_TTL_USER_SESSIONS=7200

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Google AI Configuration
GOOGLE_API_KEY=your-google-ai-api-key-here
GOOGLE_MODEL=gemini-pro

# Cohere Configuration
COHERE_API_KEY=your-cohere-api-key-here

# ============================================================================
# RESEARCH APIS CONFIGURATION
# ============================================================================

# PubMed Configuration
PUBMED_API_KEY=your-pubmed-api-key-here
PUBMED_EMAIL=your-email@institution.edu
PUBMED_TOOL=koo-platform

# Semantic Scholar Configuration
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key-here

# CrossRef Configuration
CROSSREF_API_EMAIL=your-email@institution.edu
CROSSREF_USER_AGENT=KOO-Platform/1.0.0

# arXiv Configuration (no key required)
ARXIV_USER_AGENT=KOO-Platform/1.0.0

# ============================================================================
# INTELLIGENCE FEATURES CONFIGURATION
# ============================================================================

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_PREDICTIVE_INTELLIGENCE=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CONFLICT_DETECTION=true
ENABLE_NUANCE_MERGE=true
ENABLE_QUALITY_ASSESSMENT=true
ENABLE_RESEARCH_ENGINE=true
ENABLE_WORKFLOW_INTELLIGENCE=true

# AI Processing Limits
MAX_CONCURRENT_AI_REQUESTS=10
AI_REQUEST_TIMEOUT=60
AI_RETRY_ATTEMPTS=3

# Quality Assessment Thresholds
QUALITY_THRESHOLD_MINIMUM=0.6
QUALITY_THRESHOLD_GOOD=0.8
QUALITY_THRESHOLD_EXCELLENT=0.9

# Research Engine Settings
MAX_RESEARCH_RESULTS=50
RESEARCH_RELEVANCE_THRESHOLD=0.7
RESEARCH_CACHE_DURATION=86400

# ============================================================================
# CELERY CONFIGURATION (Background Tasks)
# ============================================================================

# Celery Broker URL
CELERY_BROKER_URL=redis://:koo_redis_password_2024@redis:6379/1

# Celery Result Backend
CELERY_RESULT_BACKEND=redis://:koo_redis_password_2024@redis:6379/2

# Celery Worker Settings
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=100
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Settings
JWT_SECRET_KEY=koo-jwt-secret-key-2024-ultra-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================

# Upload Settings
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,docx,txt,md,png,jpg,jpeg
UPLOAD_DIRECTORY=./uploads

# PDF Processing Settings
PDF_MAX_PAGES=1000
PDF_QUALITY_DPI=300
PDF_ENABLE_OCR=true

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/koo-platform.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development Features
ENABLE_API_DOCS=true
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false

# Frontend Development
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================

# When deploying to production, override these:
# DEBUG=false
# ENVIRONMENT=production
# SECRET_KEY=generate-new-ultra-secure-key
# JWT_SECRET_KEY=generate-new-ultra-secure-jwt-key
# POSTGRES_PASSWORD=ultra-secure-production-password
# REDIS_PASSWORD=ultra-secure-redis-password
# Add all real API keys
# ALLOWED_HOSTS=your-domain.com,api.your-domain.com
# CORS_ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com