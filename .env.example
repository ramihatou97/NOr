# Knowledge Graph Settings
KNOWLEDGE_GRAPH_UPDATE_INTERVAL=3600
MAX_GRAPH_NODES=10000
GRAPH_SIMILARITY_THRESHOLD=0.85

# ============================================================================
# INTEGRATION SETTINGS
