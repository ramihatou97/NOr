# Enhanced KOO Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application Version
APP_VERSION=1.0.0

# Secret Key for Django (Generate a new one for production)
SECRET_KEY=your-ultra-secure-secret-key-here-change-this-in-production

# Debug Mode (false for production)
DEBUG=true

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://koo_user:koo_secure_password_2024@localhost:5432/koo_platform

# Database Connection Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# PostgreSQL Individual Settings (alternative to DATABASE_URL)
POSTGRES_DB=koo_platform
POSTGRES_USER=koo_user
POSTGRES_PASSWORD=koo_secure_password_2024
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://:koo_redis_password_2024@localhost:6379/0

# Redis Password
REDIS_PASSWORD=koo_redis_password_2024

# Celery Configuration
CELERY_BROKER_URL=redis://:koo_redis_password_2024@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:koo_redis_password_2024@localhost:6379/2

# ============================================================================
# AI AND INTELLIGENCE SERVICES
# ============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4096

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Cohere API (for additional NLP capabilities)
COHERE_API_KEY=your-cohere-api-key-here

# Hugging Face API (for open-source models)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ============================================================================
# RESEARCH AND EXTERNAL APIS
# ============================================================================

# PubMed/NCBI API
PUBMED_API_KEY=your-pubmed-api-key-here
NCBI_EMAIL=your-email@institution.edu

# CrossRef API (for DOI resolution)
CROSSREF_API_EMAIL=your-email@institution.edu
CROSSREF_API_TOKEN=your-crossref-token-here

# Semantic Scholar API
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key-here

# arXiv API (usually no key required)
ARXIV_API_RATE_LIMIT=3

# Google Scholar API (if using SerpAPI)
SERPAPI_KEY=your-serpapi-key-here

# ============================================================================
# VECTOR DATABASE CONFIGURATION
# ============================================================================

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_SIZE=1536

# Pinecone (alternative vector database)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment

# Weaviate (alternative vector database)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key-here

# ============================================================================
# SEARCH ENGINE CONFIGURATION
# ============================================================================

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Solr (alternative search engine)
SOLR_URL=http://localhost:8983/solr
SOLR_CORE=koo_platform

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Grafana Configuration
GRAFANA_PASSWORD=koo_grafana_admin_2024

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=30d

# New Relic (alternative monitoring)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=KOO Platform

# DataDog (alternative monitoring)
DATADOG_API_KEY=your-datadog-api-key

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP Settings for Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=KOO Platform <noreply@kooplatform.com>

# SendGrid (alternative email service)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun (alternative email service)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=koo-platform-storage
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# Google Cloud Storage (alternative)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=koo-platform-storage

# Azure Blob Storage (alternative)
AZURE_ACCOUNT_NAME=your-azure-account
AZURE_ACCOUNT_KEY=your-azure-key
AZURE_CONTAINER=koo-platform-storage

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Token Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CSRF and Security Headers
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://your-domain.com
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# CELERY AND BACKGROUND TASKS
# ============================================================================

# Celery Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=100
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# Flower Monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=koo_flower_2024

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# React App Settings
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Analytics and Tracking
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# Frontend Sentry
REACT_APP_SENTRY_DSN=your-frontend-sentry-dsn

# ============================================================================
# PERFORMANCE AND CACHING
# ============================================================================

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER_DATA=3600
CACHE_TTL_RESEARCH_RESULTS=86400
CACHE_TTL_KNOWLEDGE_GRAPH=1800

# Session Configuration
SESSION_COOKIE_AGE=86400
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Core Feature Toggles
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_PREDICTIVE_INTELLIGENCE=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_CONFLICT_DETECTION=true
ENABLE_SYNTHESIS_ENGINE=true
ENABLE_WORKFLOW_OPTIMIZATION=true
ENABLE_PERFORMANCE_MONITORING=true

# External Service Toggles
ENABLE_RESEARCH_APIS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKET_CONNECTIONS=true
ENABLE_BACKGROUND_TASKS=true

# Experimental Features
ENABLE_EXPERIMENTAL_AI=false
ENABLE_BETA_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Levels
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO

# Log Destinations
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_TO_SENTRY=true

# Log Rotation
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Database Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_STORAGE_PATH=/backups

# S3 Backup Configuration
BACKUP_S3_BUCKET=koo-platform-backups
BACKUP_S3_PREFIX=database-backups/

# ============================================================================
# DEVELOPMENT AND TESTING
# ============================================================================

# Testing Configuration
TEST_DATABASE_URL=postgresql://koo_user:koo_password@localhost:5432/koo_platform_test
PYTEST_WORKERS=auto

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SILK_PROFILING=false

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_TITLE=KOO Platform API
API_DOCS_VERSION=1.0.0

# ============================================================================
# LOAD BALANCING AND SCALING
# ============================================================================

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# Database Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# ============================================================================
# CUSTOM BUSINESS LOGIC
# ============================================================================

# AI Model Preferences
DEFAULT_AI_MODEL=gpt-4
FALLBACK_AI_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-3-large

# Quality Thresholds
MIN_QUALITY_SCORE=0.7
